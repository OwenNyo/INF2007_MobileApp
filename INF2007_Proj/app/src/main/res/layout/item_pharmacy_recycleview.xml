<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginBottom="16dp"
    android:padding="16dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/textPharmacyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pharmacy Name"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textPharmacyAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pharmacy Address"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance from me: 0.5 km"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonViewInMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View in Map"
        android:layout_marginTop="8dp" />
</LinearLayout>
